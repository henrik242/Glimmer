{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    // I write for browser
    "browser": false,
    // in CommonJS
    "node": true,
    "es6": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "no-console": 0,
    "no-empty": 0,
    "no-undef": 1,
    "no-unused-vars": 0,
    "no-fallthrough": 2

  },
  "plugins": [
    "react"
  ],
  "globals": {
    "api": false,
    "store": false,
    "__DEV__": false,
    "auth": false,
    "firebaseApp": false,
    "moment": false,
    "helpers": false,
    "arbeidsMaur": false,
    "fetch": false
  },
  "extends": [
    "airbnb"
  ]
}
